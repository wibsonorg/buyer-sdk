{
  "name": "buyer-api",
  "version": "2.0.0-alpha.3",
  "description": "Buyer API",
  "author": "Wibson Development Team",
  "main": "src/app.js",
  "scripts": {
    "build": "babel src -d dist",
    "serve": "node dist/index.js",
    "start": "nodemon src/index.js",
    "e2e": "ava -t **/*.e2e.js | faucet",
    "test": "ava --tap | faucet",
    "test:watch": "ava --watch",
    "test:coverage": "nyc npm test",
    "test:performance": "ava -t **/*.test.js | faucet",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "publish": "scripts/publish.sh $npm_package_name-v$npm_package_version",
    "task:production": "node dist/tasks/index.js",
    "task": "babel-node src/tasks/index.js"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "abi-decoder": "^1.2.0",
    "apicache": "^1.2.3",
    "async-redis": "^1.1.4",
    "aws-sdk": "^2.188.0",
    "axios": "0.18.0",
    "bignumber.js": "^7.2.1",
    "body-parser": "^1.18.3",
    "bull": "^3.4.4",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "eth-crypto": "1.2.3",
    "ethereumjs-tx": "^1.3.6",
    "express": "^4.16.3",
    "express-boom": "^2.0.0",
    "express-promise-router": "^3.0.3",
    "geoip-lite": "1.3.2",
    "glob": "^7.1.2",
    "helmet": "^3.12.1",
    "jsonwebtoken": "^8.3.0",
    "level": "^4.0.0",
    "morgan": "1.9.1",
    "node-forge": "^0.7.5",
    "openpgp": "3.1.0",
    "read": "1.0.7",
    "redis": "^2.8.0",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5",
    "swagger-jsdoc": "^3.2.9",
    "swagger-tools": "^0.10.4",
    "truffle-contract": "3.0.6",
    "uuid": "^3.3.2",
    "web3": "1.0.0-beta.33",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "ava": "^1.2.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "faucet": "0.0.1",
    "ganache-cli": "^6.1.3",
    "level-test": "^4.0.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "redis-mock": "^0.27.0",
    "sinon": "^6.1.0",
    "supertest": "^3.1.0",
    "testdouble": "^3.8.1"
  },
  "nodemonConfig": {
    "exec": "clear;babel-node",
    "watchedExtensions": [
      "js"
    ],
    "ignore": [
      "__mocks__/*",
      "__test__/*",
      "*.test.js"
    ],
    "delay": 3000
  },
  "nyc": {
    "check-coverage": true,
    "lines": 50,
    "cache": false,
    "reporter": [
      "html",
      "text",
      "lcov"
    ],
    "exclude": [
      "src/utils/logger.js",
      "src/utils/storage.js",
      "test/**",
      "config/**",
      "babel.config.js"
    ]
  },
  "ava": {
    "files": [
      "**/*.test.js",
      "!**/*.performance.test.js"
    ],
    "sources": [
      "test/**/*",
      "e2e/**/*"
    ],
    "cache": true,
    "concurrency": 5,
    "failWithoutAssertions": false,
    "tap": true,
    "verbose": true,
    "compileEnhancements": false,
    "require": [
      "@babel/register",
      "@babel/polyfill",
      "./test/setup"
    ]
  }
}
